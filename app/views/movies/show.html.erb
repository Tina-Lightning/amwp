<div class="row">
  <div class="col-sm-6 center">
    <%= image_tag @movie.image_url.to_s %>
    
  </div>
  <div class="col-sm-6">
    <table class="table table-hover table-responsive">
      <thead>
        <h5><%= @movie.title %></h5>
      </thead>
      <tbody>
        <tr>
          <td>Description:</td>
          <td><%= @movie.description %></td> 
        </tr>
        <tr>
          <td>Movie Length:</td>
          <td><%= @movie.movie_length %></td> 
        </tr>
        <tr>
          <td>Director:</td>
          <td><%= @movie.director %></td> 
        </tr>
        <tr>
          <td>Rating:</td>
          <td><%= @movie.rating %></td> 
        </tr>
        <tr>
          <td>Year:</td>
          <td><%= @movie.year %></td> 
        </tr>
      </tbody>
    </table>
  </div>
</div>

<h3 class="center">Can I watch this movie with my parents?</h3>
<div class="well">
  <div class="row">
      <div class="col-sm-6 center">
        <%= @movie.get_upvotes.size %> Yeah, go for it. 
      </div>
      <div class="col-sm-6 center">
        <%= @movie.get_downvotes.size %> No! It's too <em>awkward!</em>
      </div>
    </div>
</div>

<h3 class="center">What do you think?</h3>
<div class="well">
  <div class="row">
      <div class="col-sm-6 center">
        <%= link_to like_movie_path(@movie), method: :get do %>
          <i class="fa fa-thumbs-o-up"></i>&nbsp; It's cool.
        <% end %>
      </div>
      <div class="col-sm-6 center">
        <%= link_to dislike_movie_path(@movie), method: :get do %>
          <i class="fa fa-thumbs-o-down"></i>&nbsp; It's awkward. 
        <% end %>
      </div>
    </div>
</div>

<h2>Comments</h2>
<h5><%= comment_count= pluralize(@movie.comments.count, "Comment") %></h5>
<% @movie.comments.each do |comment| %> 
  <p>
    <b>From:</b>
    <%= comment.user.name %>
  </p>
  <p>
    <b>Comment:</b>
    <%= comment.comment %>
  </p>
  <%= link_to "Delete", [@movie, comment], method: :delete, confirm: "Are you sure you want to delete this product?" %>
<% end %>

<%= link_to "Add Comment", new_movie_comment_path(@movie), class: 'pull-right' %>

<p>
  <% if @movie.user == current_user %>
    <%= link_to 'Edit', edit_movie_path(@movie) %>
  <% end %>  &nbsp;
  <%= link_to 'Back', movies_path %>
</p>