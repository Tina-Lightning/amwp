<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @movie.image.url(:medium) %>
</p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Movie length:</strong>
  <%= @movie.movie_length %>
</p>

<p>
  <strong>Director:</strong>
  <%= @movie.director %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<h2>Comments</h2>
<h5><%= comment_count= pluralize(@movie.comments.count, "Comment") %></h5>
<% @movie.comments.each do |comment| %> 
  <p>
    <b>From:</b>
    <%= comment.user.name %>
  </p>
  <p>
    <b>Comment:</b>
    <%= comment.comment %>
  </p>
  <%= link_to "Delete", [@movie, comment], method: :delete, confirm: "Are you sure you want to delete this product?" %>
<% end %>

<%= link_to "Add Comment", new_movie_comment_path(@movie), class: 'pull-right' %>

<p>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
</p>